"use strict";

/*
  Напишите код, который будет спрашивать логин (prompt).

  Если посетитель вводит "Админ", то спрашивать пароль, если нажал отмена (escape) - выводить "Вход отменён", если вводит что-то другое - "Я вас не
  знаю".

  Пароль проверять так: если введён пароль "Чёрный Властелин", то выводить "Добро пожаловать!", иначе - "Пароль неверен", при отмене - "Вход отменён".
*/

var login = prompt ('Укажите логин', '');

if (login === 'Админ') {
  var password = prompt ('Укажите пароль', '');

  if (password === 'Чёрный Властелин') {
    alert ('Добро пожаловать!');

  } else if (password !== null) {
    alert ('Пароль неверен');

  } else {
    alert ('Вход отменён');
  };

} else if (login !== null) {
  alert ('Я вас не знаю');

} else {
  alert ('Вход отменён')
};

